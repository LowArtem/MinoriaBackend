{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq"
        }
      }
    ]
  },
  "Swagger": {
    "Title": "MinoriaBackend Web Application",
    "Description": "API for MinoriaBackend Web Application"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=application_db;Username=postgres;Password=root",
    "HangfireConnection": "Host=postgres;Port=5432;Database=application_db;Username=postgres;Password=root"
  },
  "Redis": {
    "ConnectionString": "redis:6379,abortConnect=false"
  },
  "JWT": {
    "Key": "thisismysecretkey",
    "Issuer": "MinoriaBackend",
    "Audience": "MinoriaBackend API"
  },
  "AllowedHosts": "*"
}
